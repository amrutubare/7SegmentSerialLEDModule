source "$OUTPUT/Kconfig-boardOptions"

comment "Custom board options"

config BOARD_SPIS_ENABLE
	bool "Enable spis"
	depends on BOARD_TOTAL_SPIS != 0
	default y
	help
		Enables board buttons.
		
config BOARD_TOTAL_SPIS
	int
	default 0

